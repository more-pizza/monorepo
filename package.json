{
  "name": "monorepo",
  "version": "1.0.0",
  "packageManager": "npm",
  "engines": {
    "node": ">=18",
    "npm": ">=9"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@changesets/cli": "^2.26.2",
    "turbo": "^1.10.3"
  },
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "change": "npx changeset",
    "release": "npm run build && npx changeset publish",
    "mongo": "docker run -d -p 27017:27017 -v ./.mongo:/data/db mongo"
  }
}
