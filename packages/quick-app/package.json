{
  "name": "@more-pizza/quick-app",
  "version": "0.0.0",
  "license": "MIT",
  "scripts": {
    "build": "rm -rf dist/ && tsc",
    "dev": "concurrently -k \"npm run watch:ts\" \"npm run watch:server\"",
    "format:package": "npx format-package -w",
    "start": "node dist/index.js",
    "watch:server": "nodemon dist/index.js",
    "watch:ts": "tsc -w",
    "mongo": "docker run -d -p 27017:27017 -v ./.mongo:/data/db mongo"
  },
  "dependencies": {
    "cookie-parser": "1.4.6",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.18.2",
    "mongoose": "7.5.3",
    "pino": "8.16.1",
    "pino-pretty": "10.2.3"
  },
  "devDependencies": {
    "@types/node": "^20.2.4",
    "concurrently": "8.0.1",
    "nodemon": "^2.0.22",
    "ts-node": "10.9.1",
    "typescript": "^5.0.4",
    "source-map-support": "0.5.21",
    "type-fest": "4.2.0"
  }
}
